# {{ ansible_managed }}
[user]
	name = {{ github.name }}
	email = {{ github.email }}
	signingkey = {{ github.pgp_key_id }}
[commit]
	gpgsign = true
	template = {{ ansible_env.HOME }}/.git-commit-template.commit
[core]
	editor = vim
  logallrefupdates = true
  sharedRepository = 0644
  compression = 9
[push]
	default = simple
[status]
  submoduleSummary = true
[diff]
  submodule = log
[fetch]
  recurseSubmodules = on-demand
[receive]
  fsckObjects = true
  denyDeletes = true
  denyDeleteCurrent = true
  denyCurrentBranch = true
  denyNonFastForwards = true
[merge]
  log = true
[rebase]
  stat = true
[color]
  ui = auto
