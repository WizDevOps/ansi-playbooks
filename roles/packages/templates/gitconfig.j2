{{ ansible_managed | comment('plain', prefix='#######\n#', postfix='#\n#######\n') }}
[includeIf "gitdir:{{ ansible_env.HOME }}/Repos/work/"]
  path = ~/.gitconfig_work
[includeIf "gitdir:{{ ansible_env.HOME }}/Repos/open-source/"]
  path = ~/.gitconfig_open_source
[commit]
	gpgsign = true
	template = ~/.git-commit-template.commit
[core]
	editor = vim
  logallrefupdates = true
  sharedRepository = 0644
  compression = 9
[push]
	default = simple
[status]
  submoduleSummary = true
[diff]
  submodule = log
[fetch]
  recurseSubmodules = on-demand
[receive]
  fsckObjects = true
  denyDeletes = true
  denyDeleteCurrent = true
  denyCurrentBranch = true
  denyNonFastForwards = true
[merge]
  log = true
[rebase]
  stat = true
[color]
  ui = auto
[gpg]
  program = gpg2
